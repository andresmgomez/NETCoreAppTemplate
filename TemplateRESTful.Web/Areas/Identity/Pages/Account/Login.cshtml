@page
@model LoginModel

@using TemplateRESTful.Web.Views.Shared.Components.SocialLogin
@inject UserManager<ApplicationUser> UserManager


@{
    ViewData["Title"] = "Account Login";
    ViewData["Subtitle"] = "Type your credentials below to access your account";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6 col-xl-5">
        <div class="wrapper-form">
            <span class="form-logo">
                <i class="zmdi zmdi-chart"></i>
            </span>
        </div>
        <div class="card mt-4">
            <div class="card-body p-4">
                <div class="text-center mt-2">
                    <h5 class="text-primary">@ViewData["Title"]</h5>
                    <p class="text-muted">@ViewData["Subtitle"]</p>
                </div>
                <div class="p-2 mt-4">
                    <form class="main-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="mb-3">
                            <div class="form-group">
                                <input class="form-control" asp-for="Input.Email" placeholder="Email Account" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input class="form-control" asp-for="Input.Password" placeholder="Secure Password" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-checkbox">
                                <input class="checkbox-field" asp-for="Input.RememberMe" />
                                <label class="label-checkbox" asp-for="Input.RememberMe">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                            </div>
                        </div>
                        <div class="mb-2 mt-4">
                            <button class="btn btn-success w-100" type="submit">Login</button>
                        </div>
                    </form>
                    <div class="text-center p-2 mt-4">
                        <p class="text-muted">Or login with</p>
                    </div>
                    @(await Component.InvokeAsync<SocialLoginViewComponent>())
                </div>
            </div>
        </div>
        <div class="form-links">
            <div class="text-start">
                <a class="link" id="forgot-password" asp-page="./ForgotPassword"> Forgot your password? </a>
            </div>
            <div class="text-end">
                <a class="link" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"> Don't have an account? </a>
            </div>
        </div>
    </div>
</div>