@using TemplateRESTful.Web.Areas.Accounts.Models;
@model UserProfileViewModel

@if (Model.OnlineProfile.Picture != null)
{
    <img src="data:image/*;base64,@(Convert.ToBase64String(Model.OnlineProfile.Picture))" id="switchPhoto"
         style="height: 150px;" class="rounded-circle img-thumbnail avatar-image" alt="My profile image">
}
else
{
    <img src="~/img/avatar-user.png" style="height: 150px;" class="rounded-circle img-thumbnail avatar-image" alt="My profile image" />
}