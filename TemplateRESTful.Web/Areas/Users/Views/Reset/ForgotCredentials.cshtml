@model RequestUserDto

@{
    ViewData["Title"] = "Forgot your Password?";
    ViewData["Subtitle"] = "Type your email account in order to restore your password";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6 col-xl-5">
        <div class="wrapper-form">
            <span class="form-logo">
                <i class="zmdi zmdi-chart"></i>
            </span>
        </div>
        <form class="main-form" method="post">
            <div class="card mt-4">
                <div class="card-body p-4">
                    <div class="text-center mt-2">
                        <h5 class="text-primary">@ViewData["Title"]</h5>
                        <p class="text-muted">@ViewData["Subtitle"]</p>
                    </div>
                    <div class="p-2 mt-4">
                        <div class="mb-3">
                            <div class="form-group">
                                <input class="form-control is-invalid" asp-for="Email" placeholder="Email address" />
                                <span asp-validation-for="Email" class="error invalid-feedback"></span>
                            </div>
                        </div>
                        <div class="mb-2 mt-4">
                            <button class="btn btn-primary w-100" type="submit">Forgot Password</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-links">
                <div class="text-center">
                    <a class="link" asp-controller="Auth" asp-action="Login">
                        Return to Login page
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}