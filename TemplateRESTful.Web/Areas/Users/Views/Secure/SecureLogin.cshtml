@using TemplateRESTful.Web.Views.Shared.Components.Avatar;
@model AdminUserDto

@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Login with Two Factor Authentication";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6 col-xl-5">
        <div class="wrapper-form">
            <span class="form-logo">
                <i class="zmdi zmdi-chart"></i>
            </span>
        </div>
        <form class="main-form" method="post">
            <div class="card card-avatar">
                <div class="card-body p-4">
                    <div class="text-center mt-2">
                        <h5 class="text-primary">@ViewData["Title"]</h5>
                    </div>
                    <div class="p-2">
                        <div class="avatar-profile text-center">
                            @(await Component.InvokeAsync<AvatarViewComponent>())
                        </div>
                        <div class="mb-3">
                            <div class="message-wrapper mt-3">
                                <p class="text-muted text-center">
                                    Type the code that is generated by your Authenticator app 
                                    or check your registered Email for an Authorization code. 
                                </p>
                            </div>
                            <div class="form-group">
                                <input class="form-control is-invalid" asp-for="AccessCode" placeholder="Authenticator Code" />
                                <span asp-validation-for="AccessCode" class="error invalid-feedback"></span>
                            </div>
                            <input type="hidden" asp-for="EmailAccount" class="form-control" />
                            <div class="mb-2 mt-4">
                                <button class="btn btn-primary w-100" type="submit">Authenticate</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


