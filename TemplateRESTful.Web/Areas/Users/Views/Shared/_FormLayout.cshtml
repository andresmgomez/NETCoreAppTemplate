<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Template RESTful Web</title>
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/font-awesome.all.min.css" />
    <link rel="stylesheet" href="~/css/app-icons.css" />
    <link rel="stylesheet" href="~/css/app-utils.css" />
    <link rel="stylesheet" href="~/css/app-styles.css" />
</head>
<body>
    <div class="overlay-position bg-page">
        <div class="bg-overlay"></div>
    </div>
    <div class="container">
        @RenderBody()
    </div>

    <script src="~/plugins/popper.min.js"></script>
    <script src="~/lib/jquery/dist/js/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

    @await Component.InvokeAsync("NotyfNotification")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
