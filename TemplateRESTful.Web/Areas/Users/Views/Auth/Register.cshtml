@model RegisterUserDto

@{
    ViewData["Title"] = "Register a new Account";
    ViewData["Subtitle"] = "Sign up to get access to one of our services";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6 col-xl-5">
        <div class="wrapper-form">
            <span class="form-logo">
                <i class="zmdi zmdi-chart"></i>
            </span>
        </div>
        <form class="main-form" asp-action="Register" method="post">
            <div class="card mt-4">
                <div class="card-body p-4">
                    <div class="text-center mt-2">
                        <h5 class="text-primary">@ViewData["Title"]</h5>
                        <p class="text-muted">@ViewData["Subtitle"]</p>
                    </div>
                    <div class="p-2 mt-4">
                        <div class="mb-3">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input class="form-control" asp-for="FirstName" placeholder="First name" />
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input class="form-control" asp-for="LastName" placeholder="Last name" />
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <input class="form-control" asp-for="Email" placeholder="Email" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <input class="form-control" asp-for="Password" placeholder="Password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <input class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="mb-2 mt-4">
                            <button class="btn btn-success w-100" type="submit">Sign Up</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-links">
                <div class="text-center">
                    <a class="link" asp-action="Login"> Already have an account? </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}