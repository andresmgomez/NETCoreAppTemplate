@using TemplateRESTful.Domain.Models.Entities;
@model OnlineProfile

@if (Model.Picture != null)
{
    <img src="data:image/*;base64,@(Convert.ToBase64String(Model.Picture))" id="switchPhoto"
         style="height: 150px;" class="rounded-circle img-thumbnail avatar-image" alt="My profile image">
}
else
{
    <img src="~/img/avatar-user.png" class="rounded-circle img-thumbnail avatar-image" style="height: 150px; alt="My profile image" />
}