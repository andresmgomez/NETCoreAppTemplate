@using UserManagementDemo.Web.Areas.Accounts.Models;
@model UserProfileViewModel

@if (Model.OnlineProfile.Picture != null)
{
    <img src="data:image/*;base64,@(Convert.ToBase64String(Model.OnlineProfile.Picture))" id="switchPhoto"
         style="height: 30px;" class="rounded-circle img-thumbnail" alt="My profile image">
}
else
{
    <img src="~/img/avatar-user.png" class="rounded-circle img-thumbnail" style="height: 30px;" alt="My profile image" />
}