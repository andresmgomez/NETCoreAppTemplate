@inject UserManager<ApplicationUser> UserManager

@model VerifyUserDto

@{
    ViewData["Title"] = "Add a Contact Number";
    ViewData["Subtitle"] = "Type a valid phone number that is registered in the US";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6 col-xl-5">
        <div class="wrapper-form">
            <span class="form-logo">
                <i class="zmdi zmdi-chart"></i>
            </span>
            <form class="main-form" method="post">
                <div class="card mt-4">
                    <div class="card-body p-4">
                        <div class="text-center mt-2">
                            <h5 class="text-primary">@ViewData["Title"]</h5>
                            <p class="text-muted">@ViewData["Subtitle"]</p>
                        </div>
                        <div class="text-center">
                            <img src="~/img/avatar-user.png" style="width: 6rem" class="rounded-circle img-thumbnail" alt="User profile image" />
                            <h5 class="mt-3">
                                @UserManager.GetUserAsync(User).Result.FirstName
                                @UserManager.GetUserAsync(User).Result.LastName
                            </h5>
                        </div>
                        <div class="p-2 mt-4">
                            <div class="mb-3">
                                <div class="form-group">
                                    <input asp-for="PhoneNumber" type="tel" class="form-control is-invalid" placeholder="Contact Number" />
                                    <span asp-validation-for="PhoneNumber" class="error invalid-feedback"></span>
                                </div>
                            </div>
                            <div class="mb-2 mt-4">
                                <button class="btn btn-primary w-100" type="submit">Save Contact Number</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}