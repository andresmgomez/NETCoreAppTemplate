@model LoginUserDto

@{
    ViewData["Title"] = "Account Login";
    ViewData["Subtitle"] = "Type your credentials below to access your account";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6 col-xl-5">
        <div class="wrapper-form">
            <span class="form-logo">
                <i class="zmdi zmdi-chart"></i>
            </span>
            <div class="card">
                <div class="card-body p-4">
                    <div class="text-center mt-2">
                        <h5 class="text-primary">@ViewData["Title"]</h5>
                        <p class="text-muted">@ViewData["Subtitle"]</p>
                    </div>
                    <div class="p-2">
                        <form class="main-form" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="mb-3">
                                <div class="form-group">
                                    <input class="form-control is-invalid" asp-for="Email" placeholder="Email Account" />
                                    <span asp-validation-for="Email" class="error invalid-feedback"></span>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" asp-for="Password" placeholder="Secure Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-checkbox">
                                    <input class="checkbox-field" asp-for="RememberMe" />
                                    <label class="label-checkbox text-muted" asp-for="RememberMe">
                                        @Html.DisplayNameFor(m => m.RememberMe)</label>
                                </div>
                            </div>
                            <div class="mb-2">
                                <button class="btn btn-primary w-100" type="submit">Login</button>
                            </div>
                        </form>
                        <div class="text-center p-2">
                            <p class="text-muted">Or login with</p>
                        </div>
                        <partial name="_ExternalAuthLogin" />
                    </div>
                </div>
            </div>
            <div class="form-links">
                <div class="text-start">
                    <a class="link" asp-controller="Reset" asp-action="ForgotCredentials">
                        Forgot your password? 
                    </a>
                </div>
                <div class="text-end">
                    <a class="link" asp-action="Register"> 
                        Don't have an account? 
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}